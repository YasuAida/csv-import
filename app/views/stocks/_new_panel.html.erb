<div class="panel panel-default" id='new-default'>
	<div class="panel-heading">
	  仕入台帳(新規登録画面)
	  <%= link_to "一覧画面へ", stocks_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="account">日付</th>
          <th class="order_num">SKU</th>
          <th class="asin">ASIN</th>
          <th class="content">商品名</th>
          <th class="amount">単価</th>
          <th class="rate">個数</th>
          <th class="account">支払日</th>
          <th class="account">購入先</th>
          <th class="account">通貨</th>
          <th class="update"></th>
        </tr>
      </thead>
      <%= form_for(@stock) do |f| %>
        <tbody class="footer">
          <tr>
            <td class="account"><%= f.text_field :date, :size=> "7"%></td>            
            <td class="order_num"><%= f.text_field :sku, :size => "16"%></td>
            <td class="asin"><%= f.text_field :asin, :size=> "10"%></td>
            <td class="content" style="white-space:nowrap;"><%= f.text_field :goods_name, :size => "35"%></td>           
            <td class="amount"><%= f.text_field :unit_price, :size=> "6", :style=>"text-align:right"%></td>
            <td class="rate"><%= f.text_field :number, :size => "1", :style=>"text-align:right"%></td>
            <td class="account"><%= f.text_field :money_paid, :size=> "7"%></td>           
            <td class="account"><%= f.text_field :purchase_from, :size=> "7"%></td>            
            <td class="account"><%= f.text_field :currency, :size=> "7"%></td>
            <td class="update"><%= f.submit "登録", class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>