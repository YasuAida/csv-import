<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  仕入台帳(コピー画面)
	  <%= link_to "一覧画面へ", stocks_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_stock_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./stocks/destroy class="btn btn-default btn-xs" >削除</th>
          <th class="account">日付</th>
          <th class="order_num">SKU</th>
          <th class="asin">ASIN</th>
          <th class="content">商品名</th>
          <th class="rate">個数</th>
          <th class="amount">単価</th>
          <th class="account">支払日</th>
          <th class="account">購入先</th>
          <th class="account">通貨</th>
          <th class="account"></th>
        </tr>
      </thead>
      <tbody class="copy_head">

        <% @copy_stocks.each do |stock|  %>
                <tr>
          <%= form_for(stock, url: stock_path(stock), remote: true) do |f|  %>

              <td class="update" id="check-<%= stock.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>            
              <td class="account"><%= f.text_field :date, :size=> "7"%></td>
              <td class="order_num"><%= f.text_field :sku, :size => "16"%></td>
              <td class="asin"><%= f.text_field :asin, :size => "10" %></td>
              <td class="content" style="white-space:nowrap;"><%= f.text_field :goods_name, :size => "36"%></td>
              <td class="rate" id="submit-<%= stock.id %>"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>            
                          
            <% ex_currency = current_user.currencies.find_by(name: stock.currency) %>
            <% if ex_currency.method == "外貨×為替レート" %>
              <td class="amount"><%= f.text_field :unit_price, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 2} }%></td>
            <% else %>
              <td class="amount"><%= f.text_field :unit_price, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
            <% end %>
                
              <td class="account"><%= f.text_field :money_paid, :size=> "7"%></td>
              <td class="account"><%= f.text_field :purchase_from, :size=> "7"%></td>             
              <td class="account"><%= f.text_field :currency, :size=> "7"%></td>
              <td class="account" id="submit-<%= stock.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_stock_path(stock), class: 'btn btn-default btn-xs'%></td>
            
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= stock.id %>").change(function(e){
                  $('#edit_stock_<%= stock.id %>').submit();
                });
              </script>
            
          <% end %>    
                  </tr>
        <% end %>

      </tbody>      
    </table>
  </div>
</div>