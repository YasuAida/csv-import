<div class="panel panel-default">
  <div class="panel-heading">
    入金額確認レポート
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th class="update"><a href= ./summaries/destroy class="btn btn-default btn-xs">削除</th>      
        <th class="account">締め日</th>
        <th class="amount">入金額</th>
        <th class="order_num">銀行口座</th>
        <th class="account">入金日</th>
        <td class="update"></th>
      </tr>
    </thead>
    <tbody class="stocks">
      <% @summaries.each do |summary| %>
        <tr>
          <%= form_for(summary, url: summary_path(summary), remote: true) do |f|  %>
            <td class="update" id="check-<%= summary.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>          
            <td class="account"><%= summary.closing_date %></td>
            <td class="amount"><%= addcomma(summary.total_sales.to_i) %></td> 
            <td class="order_num"><%= f.collection_select :bank, current_user.banks.all, :name, :name, {}, {}%></td>
            <td class="account"><%= f.text_field :money_receipt_date, :size=> "8"%></td>
            <td class="update" id="submit-<%= summary.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%>
                            
            <!--チェックボックス更新用JQuery-->
            <script>
              $("#check-<%= summary.id %>").change(function(e){
                $('#edit_summary_<%= summary.id %>').submit();
              });
            </script>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @summaries %>
</div>
