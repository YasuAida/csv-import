<div class="panel panel-default">
	<div class="panel-heading">
	  損益管理シート/パターン登録(新規登録画面)
	  <%= link_to "一覧画面へ", entrypatterns_path, class: 'btn btn-default btn-xs'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
       <tr>
          <th class="account">SKU</th>
          <th class="order_num">トランザクションの種類</th>
          <th class="order_num">支払いの種類</th>
          <th class="reference">支払いの詳細</th>
          <th class="order_num">処理</th>
          <th class="update"></th>
        </tr> 
      </thead>
      <%= form_for(@entrypattern) do |f|  %>
        <tbody class="footer">
          <tr>
            <td class="account"><%= f.text_field :sku, readonly: true, :size=> "7"%></td>
            <td class="order_num"><%= f.text_field :kind_of_transaction, readonly: true, :size=> "18"%></td>
            <td class="order_num"><%= f.text_field :kind_of_payment, readonly: true, :size=> "18"%></td>
            <td class="reference"><%= f.text_field :detail_of_payment, readonly: true, :size=> "22"%></td>
            <td class="order_num"><%= f.text_field :handling, :size=> "18"%></td>
            <td class="update"><%= f.submit "登録", class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>