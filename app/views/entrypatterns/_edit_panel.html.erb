<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  損益管理シート/パターン登録(修正画面)
	  <%= link_to "一覧画面へ", entrypatterns_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_entrypattern_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
        <th class="account">SKU</th>
        <th class="order_num">トランザクションの種類</th>
        <th class="order_num">支払いの種類</th>
        <th class="order_num">支払いの詳細</th>
        <th class="order_num">処理</th>
        <th class="account"></th>
        </tr>
      </thead>
      <%= form_for(@entrypattern, url: entrypattern_path(@entrypattern)) do |f|  %>
        <tbody class="footer">
          <tr>
            <td class="account"><%= f.text_field :sku, readonly: true, :size=> "8"%></td>
            <td class="order_num"><%= f.text_field :kind_of_transaction, readonly: true, :size=> "18"%></td>
            <td class="order_num"><%= f.text_field :kind_of_payment, readonly: true, :size=> "18"%></td>
            <td class="order_num"><%= f.text_field :detail_of_payment, readonly: true, :size=> "18"%></td>
            <td class="order_num"><%= f.text_field :handling, :size=> "18"%></td>          
            <td class="account" id="submit-<%= @entrypattern.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_entrypattern_path(@entrypattern), class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
