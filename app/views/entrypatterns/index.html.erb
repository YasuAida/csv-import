<h1>損益管理シート/パターン登録</h1>

<div class="container">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="small">ID</th>
        <th class="order_num">SKU</th>
        <th class="order_num">トランザクションの種類</th>
        <th class="detail">支払いの種類</th>
        <th class="detail">支払いの詳細</th>
        <th class="account">処理</th>
      </tr>
    </thead>
    <tbody>
      <% @entrypatterns.each do |entrypattern| %>
        <tr>
          <td class="small"><%= entrypattern.id %></th>
          <td class="order_num"><%= entrypattern.sku %></td>
          <td class="order_num"><%= entrypattern.kind_of_transaction %></td>
          <td class="detail"><%= entrypattern.kind_of_payment %></td>
          <td class="detail"><%= entrypattern.detail_of_payment %></td>
          <td class="account"><%= entrypattern.handling %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
