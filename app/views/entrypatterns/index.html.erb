<h1>損益管理シート/パターン登録</h1>

<div class="container">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="small">削除</th>
        <th class="account">SKU</th>
        <th class="order_num">トランザクションの種類</th>
        <th class="order_num">支払いの種類</th>
        <th class="reference">支払いの詳細</th>
        <th class="order_num">処理</th>
        <th class="update"></th>
      </tr>
    </thead>
    <tbody>
      <% @entrypatterns.each do |entrypattern| %>
        <tr>
        <%= form_for(entrypattern, url: entrypattern_path(entrypattern)) do |f|  %>
          <td class="small"><%= link_to "削除" , entrypattern , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          <td class="account"><%= f.text_field :sku, :size=> "8"%></td>
          <td class="order_num"><%= f.text_field :kind_of_transaction, :size=> "16"%></td>
          <td class="order_num"><%= f.text_field :kind_of_payment, :size=> "16"%></td>
          <td class="reference"><%= f.text_field :detail_of_payment, :size=> "22"%></td>
          <td class="order_num"><%= f.text_field :handling, :size=> "16"%></td>
          <td class="update"><%= f.submit "更新", class: 'btn btn-default'%></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
