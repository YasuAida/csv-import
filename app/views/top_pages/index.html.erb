<% content_for :head do %> 
  <div class="panel_container">
    <div class="panel panel-default">
    	<div class="panel-heading">
    	</div>
    	<div class="panel-body">
    	</div>
    </div>
  </div>
<table>
  <tr>
    <th></th>
  <tr>
  <tr>
    <p>
      BackUp:
      <%= link_to "ダウンロード", download_top_pages_path(format: "csv") %>
    </p>
    
    <%= form_tag({action: 'upload'}, {multipart: true}) do %>
      <%= file_field :upload, :datafile,  class: 'filestyle', "data-buttonText": "ファイル選択", 'data-input': false, multiple: true %>
      <%= submit_tag "アップロード", class: 'btn btn-default'%>
    <% end %>
  <tr>
  <tr>
    <th>事業開始年月日</th>
  </tr>
  <tr>
    <%= form_for(@period) do |f|  %>        
      <td><%= f.text_field :period_start %></td>
      <td><%= f.submit "期首登録"%></td>
    <% end %>
  </tr>
</table>
<% end %>