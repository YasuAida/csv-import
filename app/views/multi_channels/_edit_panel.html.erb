<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  マルチチャンネルＳＫＵ登録(修正画面)
	  <%= link_to "一覧画面へ", multi_channels_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_multi_channel_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="middle">取引ID</th>
          <th class="account">日付</th>            
          <th class="reference">注文番号</th>
          <th class="large">ＳＫＵ</th>
          <th class="content">商品名</th>          
          <th class="rate">個数</th>
          <th class="account"></th> 
        </tr>
      </thead>
      <%= form_for(@multi_channel, url: multi_channel_path(@multi_channel)) do |f|  %>
        <tbody class="footer">
          <td class="middle"><%= f.text_field :sale_id, :size => "4", :style=>"text-align:right" %></td>
          <td class="account"><%= f.text_field :date, :size => "7"%></td>               
          <td class="reference"><%= f.text_field :order_num, :size => "20" %></td>           
          <td class="large"><%= f.text_field :sku, :size => "11"%></td>
          
        <% sku_stock = current_user.stocks.find_by(sku: @multi_channel.sku) %>
        <% sku_stockaccept = current_user.stockaccepts.find_by(sku: @multi_channel.sku) %>        
        <% if sku_stockaccept.present? %>
          <% multi_goods_name = sku_stockaccept.goods_name %>
        <% elsif sku_stock.present? %>
          <% multi_goods_name = sku_stock.goods_name %>
        <% end %>
          <td class="content"><%= multi_goods_name if multi_goods_name.present? %></td>
            
          <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>                
          <td class="account" id="submit-<%= @multi_channel.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_multi_channel_path(@multi_channel), class: 'btn btn-default btn-xs'%></td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
