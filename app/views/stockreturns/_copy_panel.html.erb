<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  仕入返品台帳(コピー画面)
	  <%= link_to "一覧画面へ", stockreturns_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_stockreturn_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./stockreturns/destroy class="btn btn-default btn-xs" >削除</th>
          <th class="half">仕入ID</th>          
          <th class="account">日付</th>
          <th class="large">SKU</th>
          <th class="asin">ASIN</th>
          <th class="content">商品名</th>
          <th class="amount">単価</th>
          <th class="rate">個数</th>
          <th class="account">支払日</th>
          <th class="account">購入先</th>
          <th class="account">通貨</th>
          <th class="account"></th>
        </tr>
      </thead>
      <tbody class="copy_head">
        <% @copy_stockreturns.each do |stockreturn|  %>
          <tr>
            <%= form_for(stockreturn, url: stockreturn_path(stockreturn), remote: true) do |f|  %>
              <td class="update" id="check-<%= stockreturn.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>
              <td class="half"><%= f.text_field :stock_id, :size=> "4"%></td>
              <td class="account"><%= f.text_field :date, :size=> "7"%></td>
              <td class="large"><%= f.text_field :sku, :size => "11"%></td>
              <td class="asin"><%= f.text_field :asin, :size => "12" %></td>
              <td class="content" style="white-space:nowrap;"><%= f.text_field :goods_name, :size => "36"%></td>        
        
            <% ex_currency = current_user.currencies.find_by(name: stockreturn.currency) %>
            <% if ex_currency.method == "外貨×為替レート" %>
              <td class="amount"><%= f.text_field :unit_price, :size=> "6", :style=>"text-align:right", data: { autonumeric: {mDec: 2} }%></td>
              <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>  
            <% else %>
              <td class="amount"><%= f.text_field :unit_price, :size=> "6", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
              <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>  
            <% end %>
              
              <td class="account"><%= f.text_field :money_paid, :size=> "7"%></td>
              <td class="account"><%= f.text_field :purchase_from, :size=> "7"%></td>             
              <td class="account"><%= f.text_field :currency, :size=> "7"%></td>
              <td class="account" id="submit-<%= stockreturn.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_stockreturn_path(stockreturn), class: 'btn btn-default btn-xs'%></td>
              
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= stockreturn.id %>").change(function(e){
                  $('#edit_stockreturn_<%= stockreturn.id %>').submit();
                });
              </script>
            <% end %>
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>