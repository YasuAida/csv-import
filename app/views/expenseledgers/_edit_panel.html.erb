<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  仕入台帳(修正画面)
	  <%= link_to "一覧画面へ", expenseledgers_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_expenseledger_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="account">日付</th>
          <th class="asin">勘定科目</th>
          <th class="amount">金額(外貨)</th>
          <th class="account" >支払日</th>
          <th class="company">購入先</th>
          <th class="account">通貨</th>
          <th class="content">摘要</th>
          <th class="account"></th>           
        </tr>
      </thead>
      <%= form_for(@expenseledger, url: expenseledger_path(@expenseledger)) do |f|  %>
        <tbody class="footer">        
          <td class="account"><%= f.text_field :date, :size=> "7"%></td>
          <td class="asin"><%= f.text_field :account_name, :size=> "12"%></td>
          <td class="amount"><%= f.text_field :amount, :size=> "6", :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="account"><%= f.text_field :money_paid, :size=> "7"%></td>
          <td class="company"><%= f.text_field :purchase_from, :size=> "8"%></td>
          <td class="account"><%= f.text_field :currency, :size=> "7"%></td>
          <td class="content"><%= f.text_field :content, :size => "36"%></td>
          <td class="account" id="submit-<%= @expenseledger.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_expenseledger_path(@expenseledger), class: 'btn btn-default btn-xs'%></td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
