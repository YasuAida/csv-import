<% content_for :head do %> 
  <div class="panel_container">
    <div class="panel panel-default">
    	<div class="panel-heading">付随費用登録</div>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="small">削除</th>
          <th class="order_num">諸掛項目</th>
          <th class="update">更新</th>      
        </tr>
      </thead>
<% end %>      
      <tbody>
        <% @expense_titles.each do |expense_title| %>
        <tr>
            <td class="small"><%= link_to "削除" , expense_title , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          <%= form_for(expense_title, url: expense_title_path(expense_title.id)) do |f| %>      
            <td class="order_num"><%= f.text_field :item, :size=> "16"%></td>            
            <td class="update"><%= f.submit "更新", class: 'btn btn-default btn-sm'%></td>
          <% end %>
        </tr>
        <% end %>  
        <tr>
          <%= form_for(@expense_title) do |f| %>
            <td class="small">新規<br>登録</td>
            <td class="order_num"><%= f.text_field :item, :size=> "16"%></td>
            <td class="update"><%= f.submit "登録", class: 'btn btn-default btn-sm'%></td>     
          <% end %>
        </tr>
      </tbody>
    </table>
    <td>全ての登録が終わりましたら、こちらをクリックしてください。<%= link_to "終了", expense_methods_index_path, class: "btn btn-default" %></td>
  </div>    



