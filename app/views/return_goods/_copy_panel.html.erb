<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  FBAからの返還商品台帳(コピー画面)
	  <%= link_to "一覧画面へ", return_goods_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_return_good_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./return_goods/destroy class="btn btn-default btn-xs">削除</th>
          <th class="number">取引ID</th>          
          <th class="number">仕入ID</th>            
          <th class="account">日付</th>        
          <th class="order_num">注文番号</th>
          <th class="large">返還前ＳＫＵ</th>
          <th class="large">新ＳＫＵ</th>
          <th class="content">商品名</th>      
          <th class="rate">個数</th>
          <th class="account"></th>
        </tr>
      </thead>
      <tbody class="copy_head">
        <% @copy_return_goods.each do |return_good|  %>
          <tr>
            <%= form_for(return_good, url: return_good_path(return_good.id), remote: true) do |f| %>
              <td class="update" id="check-<%= return_good.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>
              <td class="number"><%= f.text_field :sale_id, :size => "4", :style=>"text-align:right" %></td>               
              <td class="number"><%= f.text_field :stock_id, :size => "4", :style=>"text-align:right" %></td>            
              <td class="account"><%= f.text_field :date, :size => "8"%></td>     
              <td class="order_num"><%= f.text_field :order_num, readonly: true, :size => "16"%></td>
              <td class="large"><%= f.text_field :old_sku, :size => "11"%></td>
              <td class="large"><%= f.text_field :new_sku, :size => "11"%></td>
            <% stockaccept_name = current_user.stockaccepts.find_by(sku: return_good.old_sku) %>
              <td class="content"><%= stockaccept_name.goods_name if stockaccept_name.present?%></td>          
              <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>          
              <td class="account" id="submit-<%= return_good.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_return_good_path(return_good), class: 'btn btn-default btn-xs'%></td>
                
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= return_good.id %>").change(function(e){
                  $('#edit_return_good_<%= return_good.id %>').submit();
                });
              </script>                    
            <% end %> 
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>