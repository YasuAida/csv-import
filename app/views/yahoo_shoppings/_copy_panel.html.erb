<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  ヤフーショッピング管理シート(コピー画面)
	  <%= link_to "一覧画面へ", yahoo_shoppings_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_yahoo_shopping_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./yahoo_shoppings/destroy class="btn btn-default btn-xs" >削除</th>
          <th class="account">日付</th>
          <td class="order_num">注文番号</th>
          <th class="large">SKU</th>
          <th class="content">商品名</th>
          <th class="amount">単価</th>
          <th class="rate">個数</th>
          <th class="amount">売上高</th>     
          <th class="amount">手数料</th>
          <th class="amount">送料</th> 
          <th class="account">入金日</th>
          <th class="account">送料支払日</th>
          <th class="account"></th>
        </tr>
      </thead>
      <tbody class="copy_head">
        <% @copy_yahoo_shoppings.each do |yahoo_shopping|  %>
          <tr>
            <%= form_for(yahoo_shopping, url: yahoo_shopping_path(yahoo_shopping), remote: true) do |f|  %>
              <td class="update" id="check-<%= yahoo_shopping.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td> 
              <td class="account"><%= f.text_field :date, :size=> "7"%></td>
              <td class="order_num"><%= f.text_field :order_id, :size => "16"%></td>          
              <td class="large"><%= f.text_field :sku, :size => "12"%></td>
              <td class="content" style="white-space:nowrap;"><%= f.text_field :goods_name, :size => "36"%></td>
              <td class="amount"><%= f.text_field :unit_price, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
              <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>
              <td class="amount"><%= f.text_field :sales_amount, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
              <td class="amount"><%= f.text_field :commission, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
              <td class="amount"><%= f.text_field :shipping_cost, :size=> "5", :style=>"text-align:right", data: { autonumeric: {mDec: 0} }%></td>
              <td class="account"><%= f.text_field :money_receipt_date, :size=> "7"%></td>
              <td class="account"><%= f.text_field :shipping_pay_date, :size=> "7"%></td>             
              <td class="account" id="submit-<%= yahoo_shopping.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_yahoo_shopping_path(yahoo_shopping), class: 'btn btn-default btn-xs'%></td>
            
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= yahoo_shopping.id %>").change(function(e){
                  $('#edit_yahoo_shopping_<%= yahoo_shopping.id %>').submit();
                });
              </script>           
            <% end %>    
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>