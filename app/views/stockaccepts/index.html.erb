<% content_for :head do %> 
  <div class="panel_container">
    <div class="panel panel-default">
    	<div class="panel-heading">
    	  在庫受領レポート
    	</div>
      <div class="panel-body">   	
        <%= form_tag({action: 'upload'}, {multipart: true, class: "form_tag_rakuten"}) do %>
          <label>在庫受領レポート取り込み:</label>
          <%= file_field :upload, :datafile, class: 'filestyle', "data-buttonText": "ファイル選択", 'data-input': false%>
          <%= submit_tag "UPLOAD", class: 'btn btn-default btn-sm'%>
        <% end %>        
        <%= search_form_for(@q, url: stockaccepts_path) do |f| %>
          <%= f.label :sku_eq, "出品者SKUで検索" %>
          <%= f.search_field :sku_eq, placeholder: "完全一致"%>
          <%= f.submit "検索", class: 'btn btn-default'%>
        <% end %>
        <%= search_form_for(@q, url: stockaccepts_path) do |f| %>
          <%= f.label :goods_name_cont, "商品名で検索" %>
          <%= f.search_field :goods_name_cont, placeholder: "部分一致"%>
          <%= f.submit "検索", class: 'btn btn-default'%>
        <% end %> 
        <%= search_form_for(@q, url: stockaccepts_path) do |f| %>  
          <%= f.label :asin_eq, "ASINで検索" %>
          <%= f.search_field :asin_eq, placeholder: "完全一致"%>
          <%= f.submit "検索", class: 'btn btn-default'%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th class="small">ID</th>
          <th class="account">日付</th>
          <th class="large">FNSKU</th>
          <th class="large">出品者SKU</th>
          <th class="content">商品名</th>
          <th class="rate">数量</th>
          <th class="large">FBA納品番号</th>
          <th class="rate">FC</th>
          <th class="asin">ASIN</th>      
        </tr>
      </thead>
<% end %>    
      <tbody class="stocks">
        <% @stockaccepts.each do |stockaccept| %>
          <tr>
            <th class="small"><%= stockaccept.id %></th>
            <td class="account"><%= stockaccept.date %></td>
            <td class="large"><%= stockaccept.fnsku %></td>
            <td class="large"><%= stockaccept.sku %></td>
            <td class="content"><%= stockaccept.goods_name %></td>
            <td class="rate"><%= stockaccept.quantity %></td>
            <td class="large"><%= stockaccept.fba_number %></td>
            <td class="rate"><%= stockaccept.fc %></td>  
            <td class="asin"><%= stockaccept.asin %></td>        
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @stockaccepts %>
  </div>

