<div class="panel panel-default">
	<div class="panel-heading">
	  在庫受領レポート(修正画面)
	  <%= link_to "一覧画面へ", stockaccepts_path, class: 'btn btn-default btn-xs'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="account">日付</th>
          <th class="large">FNSKU</th>
          <th class="large">出品者SKU</th>
          <th class="content">商品名</th>
          <th class="rate">数量</th>
          <th class="large">FBA納品番号</th>
          <th class="rate">FC</th>
          <th class="asin">ASIN</th>
          <th class="update"></th>
        </tr>
      </thead>
      <%= form_for(@stockaccept, url: stockaccept_path(@stockaccept)) do |f|  %>
        <tbody class="footer">
          <td class="account"><%= f.text_field :date, :size=> "7"%></td>
          <td class="large"><%= f.text_field :fnsku, :size => "11"%></td>
          <td class="large"><%= f.text_field :sku, :size => "11"%></td>
          <td class="content"><%= f.text_field :goods_name, :size => "36"%></td>
          <td class="rate"><%= f.text_field :quantity, :size=> "2"%></td>
          <td class="large"><%= f.text_field :fba_number, :size => "11"%></td>
          <td class="rate"><%= f.text_field :fc, :size => "2"%></td>  
          <td class="asin"><%= f.text_field :asin, :size => "11"%></td>
          <td class="update" id="submit-<%= @stockaccept.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%></td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
