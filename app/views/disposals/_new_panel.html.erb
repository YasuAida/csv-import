<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  廃棄商品台帳(新規登録画面)
	  <%= link_to "一覧画面へ", disposals_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>     
          <th class="number">仕入ID</th>
          <th class="account">日付</th>        
          <th class="order_num">注文番号</th>
          <th class="large">ＳＫＵ</th>
          <th class="content">商品名</th>      
          <th class="rate">個数</th>
          <th class="update"></th>         
        </tr>
      </thead>
      <%= form_for(@disposal) do |f| %>
        <tbody class="footer">
          <tr>           
            <td class="number"><%= f.text_field :stock_id, :size => "4"%></td></td>
            <td class="account"><%= f.text_field :date, :size => "8"%></td> 
            <td class="order_num"><%= f.text_field :order_num, :size => "16"%></td>            
            <td class="large"><%= f.text_field :sku, :size => "11"%></td>
            <td class="content"></td>
            <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>           
            <td class="update"><%= f.submit "登録", class: 'btn btn-default btn-xs' %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>