<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  廃棄商品台帳(コピー画面)
	  <%= link_to "一覧画面へ", disposals_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_disposal_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./disposals/destroy class="btn btn-default btn-sm">削除</th>
          <th class="middle">取引ID</th>        
          <th class="number">仕入ID</th>
          <th class="account">日付</th>        
          <th class="order_num">注文番号</th>
          <th class="large">ＳＫＵ</th>
          <th class="content">商品名</th>      
          <th class="rate">個数</th>
          <th class="update">更新</th>         
        </tr>
      </thead>
      <tbody class="copy_head">
        <% @copy_disposals.each do |disposal| %>
          <tr>
            <%= form_for(disposal, url: disposal_path(disposal.id), remote: true) do |f| %>
              <td class="update" id="check-<%= disposal.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>
              <td class="middle"><%= disposal.sale_id %></td>             
              <td class="number"><%= f.text_field :stock_id, readonly: true, :size=> "4", :style=>"text-align:right"%></td>
              <td class="account"><%= f.text_field :date, :size => "7"%></td>     
              <td class="order_num"><%= f.text_field :order_num, readonly: true, :size => "18"%></td>
              <td class="large"><%= f.text_field :sku, :size => "11"%></td>
              
            <% stock_name = current_user.stocks.find_by(sku: disposal.sku) %>
            <% return_good = current_user.return_goods.find_by(new_sku: disposal.sku) %>
            <% if stock_name.present? %>
              <td class="content"><%= stock_name.goods_name %></td>
            <% elsif return_good.present?%>
            <% stock_name = current_user.stocks.find_by(sku: return_good.old_sku) %>          
              <td class="content"><%= stock_name.goods_name if stock_name.present? %></td>
            <% else %>
              <td class="content"></td>
            <% end %>
            
              <td class="rate"><%= f.text_field :number, :size => "2", :style=>"text-align:right"%></td>          
              <td class="update" id="disposal-<%= disposal.id %>"><%= link_to "修正", edit_disposal_path(disposal), class: 'btn btn-default btn-xs'%></td>    
                
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= disposal.id %>").change(function(e){
                  $('#edit_disposal_<%= disposal.id %>').submit();
                });
              </script>                    
              <% end %> 
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>