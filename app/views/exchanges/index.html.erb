<h1>為替レート</h1>

<h3>為替レート取り込み</h3>
<%= form_tag({action: 'upload'}, {multipart: true}) do %>
  <%= file_field :upload, :datafile %>
  <%= submit_tag "UPLOAD" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>日付</th>
      <th>通貨名</th>
      <th>レート</th>
    </tr>
  </thead>
  <tbody>
     <tr>
      <% Exchange.all.each do |exchange| %>
        <th><%= exchange.id %></th>
        <td><%= exchange.date %></td>
        <td><%= exchange.country %></td>
        <td><%= exchange.rate %></td>
     </tr>
      <% end %>
  </tbody>
</table>
