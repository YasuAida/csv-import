<div class="panel panel-default" id='rakuten-default'>
	<div class="panel-heading">
	  為替レート(修正画面)
	  <%= link_to "一覧画面へ", exchanges_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_exchange_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>   
          <th class="account">日付</th>
          <th class="account">通貨名</th>
          <th class="middle">レート</th>
          <th class="update"></th>
        </tr>
      </thead>
      <%= form_for(@exchange, url: exchange_path(@exchange)) do |f|  %>
        <tbody class="footer">
          <td class="account"><%= f.text_field :date, :size=> "7"%></td>
          <td class="account"><%= f.text_field :country, :size=> "7"%></td>
          <td class="middle"><%= f.text_field :rate, :size=> "4", :style=>"text-align:right"%></td>
          <td class="update" id="submit-<%= @exchange.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
