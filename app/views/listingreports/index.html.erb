<% content_for :head do %> 
  <div class="panel_container">
    <div class="panel panel-default">
    	<div class="panel-heading">
    	  出品レポート
    	</div>
    </div>
    <div class="panel-body">    
      <%= form_tag({action: 'upload'}, {multipart: true, class: "form_tag"}) do %>
        <label>出品レポート取込み:</label>
        <%= file_field :upload, :datafile, class: 'filestyle', "data-buttonText": "ファイル選択", 'data-input': false%>
        <%= submit_tag "UPLOAD", class: 'btn btn-default' %>
      <% end %>
    </div>  
    <table>
      <thead>
        <tr>
          <th class="small">ID</th>
          <th class="order_num">出品者SKU</th>
          <th class="asin">asin</th>
          <th class="amount">価格</th>
          <th class="rate">数量</th>
        </tr>
      </thead>
<% end %>        
      <tbody class="accounts">
        <% @listingreports.each do |listingreport| %>
          <tr>
            <th class="small"><%= listingreport.id %></th>
            <td class="order_num"><%= listingreport.sku %></td>
            <td class="asin"><%= listingreport.asin %></td>
            <td class="amount"><%= addcomma(listingreport.price.to_i) %></td>
            <td class="rate"><%= listingreport.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  