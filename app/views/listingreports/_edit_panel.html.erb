<div class="panel panel-default">
	<div class="panel-heading">
	  出品レポート(修正画面)
	  <%= link_to "一覧画面へ", listingreports_path, class: 'btn btn-default btn-xs'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="large">出品者SKU</th>
          <th class="asin">asin</th>
          <th class="amount">価格</th>
          <th class="rate">数量</th>
        </tr>
      </thead>
      <%= form_for(@listingreport, url: listingreport_path(@listingreport)) do |f|  %>
        <tbody class="footer">
          <tr>
            <td class="large"><%= f.text_field :sku, :size => "11" %></td>
            <td class="asin"><%= f.text_field :asin, :size => "11" %></td>
            <td class="amount"><%= f.text_field :price, :size=> "6", :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
            <td class="rate"><%= f.text_field :quantity, :size=> "2", :style=>"text-align:right" %></td>
            <td class="update" id="submit-<%= @listingreport.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
