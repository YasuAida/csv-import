<h1>勘定科目一覧</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="small">削除</th>            
          <th class="asin">勘定科目名</th>
          <th class="middle">貸借区分</th>
          <th class="middle">ＰＬ／ＢＳ区分</th>
          <th class="update">更新</th>          
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
        <tr>
          <td class="small"><%= link_to "削除" , account , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          <%= form_for(account, url: account_path(account.id)) do |f| %>
            <td class="asin"><%= f.text_field :account, :size=> "10"%></td>          
            <td class="middle"><%= f.select :debit_credit, ["借方","貸方"] ,{include_blank: account.debit_credit, include_hidden: true} %></td>
            <td class="middle"><%= f.select :bs_pl, ["ＢＳ","ＰＬ"],{include_blank: account.bs_pl, include_hidden: true} %></td>
            <td class="update"><%= f.submit "更新", class: 'btn btn-default'%></td> 
          <% end %>
        </tr>
        <% end %>
        <%= form_for(@account) do |f| %>
          <tr>
            <td class="small"></td>
            <td class="asin"><%= f.text_field :account, :size=> "10"%></td>            
            <td class="middle"><%= f.select :debit_credit, ["借方","貸方"] %></td>
            <td class="middle"><%= f.select :bs_pl, ["ＢＳ","ＰＬ"] %></td>
            <td class="update"><%= f.submit "登録", class: 'btn btn-default' %></td>
          </tr>
        <% end %>       
      </tbody>
    </table>
  </div>
</div>