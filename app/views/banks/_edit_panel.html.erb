<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  銀行口座登録(修正画面)
	  <%= link_to "一覧画面へ", banks_path, class: 'btn btn-default btn-xs'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>      
        <tr>
          <th class="order_num">銀行口座</th>
          <th class="update">更新</th>      
        </tr>         
      </thead>
      <%= form_for(@bank, url: bank_path(@bank)) do |f|  %>
        <tbody class="footer">
          <tr>
            <td class="order_num"><%= f.text_field :name, :size=> "16"%></td>                
            <td class="update" id="submit-<%= @bank.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
