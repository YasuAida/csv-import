<div class="panel panel-default" id='copy-default'>
	<div class="panel-heading">
	  損益管理シート(コピー画面)
	  <%= link_to "一覧画面へ", pladmins_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_pladmin_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="update"><a href= ./pladmins/destroy class="btn btn-default btn-sm">削除</th>       
          <th class="middle">仕入ID</th>            
          <th class="account">日付</th>      
          <th class="order_num">注文番号</th>
          <th class="large">SKU</th>
          <th class="content">商品名</th>
          <th class="rate">個数</th>            
          <th class="company">売上先</th>      
          <th class="amount">売上高</th>
          <th class="amount">原価</th>
          <th class="amount">手数料</th>
          <th class="amount">送料</th>    
          <th class="amount">利益</th> 
          <th class="account">入金日</th>
          <th class="account">手数料支払日</th>
          <th class="account">送料支払日</th>
          <th class="update"></th>          
        </tr>
      </thead>
      <tbody class="copy_head">
        <% @copy_pladmins.each do |pladmin|  %>
         <tr>
            <%= form_for(pladmin, url: pladmin_path(pladmin.id), remote: true) do |f| %>
              <td class="update" id="check-<%= pladmin.id %>"><%= f.check_box :destroy_check, {}, "true", "false" %></td>      
              <td class="middle"><%= pladmin.stock_id %></td>
              <td class="account"><%= f.text_field :date, :size => 7 %></td>          
              <td class="order_num"><%= f.text_field :order_num, :size => 18 %></td>
              <td class="large"><%= f.text_field :sku, :size => 11 %></td>
              <td class="content"><%= f.text_field :goods_name, :size => 36 %></td>
              <td class="rate"><%= f.text_field :quantity, :size => 1, :style=>"text-align:right"%></td>            
              <td class="company"><%= f.text_field :sale_place, :size => 8 %></td>        
              <td class="amount"><%= f.text_field :sale_amount, :size => 6, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
              <td class="amount"><%= addcomma(pladmin.cgs_amount.to_i) %></td>
              <td class="amount"><%= f.text_field :commission, :size => 6, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
              <td class="amount"><%= f.text_field :shipping_cost, :size => 6, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
              <% profit = pladmin.sale_amount.to_i - pladmin.commission.to_i - pladmin.cgs_amount.to_i - pladmin.shipping_cost.to_i %>
              <td class="amount" style="text-align:right"><%= addcomma(profit)%></td>
              <td class="account"><%= f.text_field :money_receive, :size => 7 %></td>
              <td class="account"><%= f.text_field :commission_pay_date, :size => 7 %></td>        
              <td class="account"><%= f.text_field :shipping_pay_date, :size => 7 %></td>        
              <td class="update" id="submit-<%= pladmin.id %>"><%= link_to "修正", edit_pladmin_path(pladmin), class: 'btn btn-default btn-xs'%></td> 
              
              <!--チェックボックス更新用JQuery-->
              <script>
                $("#check-<%= pladmin.id %>").change(function(e){
                  $('#edit_pladmin_<%= pladmin.id %>').submit();
                });
              </script>
            <% end %> 
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>