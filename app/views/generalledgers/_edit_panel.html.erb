<div class="panel panel-default" id='edit-default'>
	<div class="panel-heading">
	  仕訳帳(修正画面)
	  <%= link_to "一覧画面へ", generalledgers_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>       
          <th class="account">日付</th>
          <th class="account">借方勘定科目</th>
          <th class="large">借方補助科目</th>
          <th class="middle">借方<br>税コード</th>
          <th class="account">貸方勘定科目</th>
          <th class="large">貸方補助科目</th>
          <th class="middle">貸方<br>税コード</th>
          <th class="amount">金額</th>
          <th class="content">摘要</th>
          <th class="company">取引先</th>
          <th class="update"></th>
        </tr>
      </thead>
      <%= form_for(@generalledger, url: generalledger_path(@generalledger)) do |f| %>
        <tbody class="footer">
          <td class="account"><%= f.text_field :date, :size=> "7" %></td>
          <td class="account"><%= f.text_field :debit_account, :size=> "7" %></td>
          <td class="large"><%= f.text_field :debit_subaccount, :size=> "11" %></td>              
          <td class="middle"><%= f.text_field :debit_taxcode, :size=> "5" %></td>              
          <td class="account"><%= f.text_field :credit_account, :size=> "7" %></td>              
          <td class="large"><%= f.text_field :credit_subaccount, :size=> "11" %></td>              
          <td class="middle"><%= f.text_field :credit_taxcode, :size=> "5" %></td>
          <td class="amount"><%= f.text_field :amount, :size=> "6", :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>              
          <td class="content"><%= f.text_field :content, :size=> "36" %></td>
          <td class="company"><%= f.text_field :trade_company, :size=> "8" %></td>
          <td class="update" id="submit-<%= @generalledger.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%></td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
