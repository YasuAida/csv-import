<div class="panel panel-default">
  <div class="panel-heading">
    付随費用台帳(新規登録画面)
	<%= link_to "一覧画面へ", subexpenses_path, class: 'btn btn-default btn-xs'%>
  </div>
  <div class="panel-body">
    <%= form_tag("/subexpenses/new", class: "form_tag", method: "get") do %>
      <%= label_tag(:q, "日付で検索:") %>
      <%= text_field_tag (:q) %>
      <%= submit_tag("絞り込み")%>
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th class="standard">諸掛項目</th>
        <th class="subexpense">按分先在庫</th>
        <th class="account">日付</th>    
        <th class="amount">外貨建金額</th>
        <th class="account">支払先</th>
        <th class="account">通貨</th>  
        <th class="account">支払日</th>
        <th class="update"></th>
      </tr>
    </thead>  
    <tbody class="subexpenses">
      <%= form_for(@subexpense) do |f| %>
        <td class="standard"><%= f.collection_select :item, current_user.expense_titles.all, :item, :item, {}, {} %></td>      
        <td class="subexpense"><%= f.collection_select :targetgood, @target_stocks, :id, :date_and_asin ,{include_hidden: false} ,{multiple: true} %></td>
        <td class="account"><%= f.text_field :date, :size=> "8"%></td>
        
        <% ex_currency = current_user.currencies.find_by(name: @subexpense.currency) %>
        <% if ex_currency.present? && ex_currency.method == "外貨×為替レート" %>
          <td class="amount"><%= f.text_field :amount, :size=> "7", :style=>"text-align:right" %></td>
        <% else %>
          <td class="amount"><%= f.text_field :amount, :size=> "7", :style=>"text-align:right" %></td>
        <% end %>
        
        <td class="account"><%= f.text_field :purchase_from, :size=> "8"%></td>
        <td class="account"><%= f.collection_select :currency, current_user.currencies.all, :name, :name, {}, {}%></td>
        <td class="account"><%= f.text_field :money_paid, :size=> "8"%></td>
        <td class="update"><%= f.submit '登録', class: 'btn btn-default btn-xs' %></td>
      <% end %>
    </tbody>
  </table>
</div>