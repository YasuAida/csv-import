<div class="panel panel-default" id='rakuten-default'>
	<div class="panel-heading">
	  楽天損益管理シート(修正画面)
	  <%= link_to "一覧画面へ", rakutens_path, class: 'btn btn-default btn-sm'%>
	  <%= link_to "新規登録画面へ", new_rakuten_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body" id='new-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>         
          <th class="date">売上日付</th>      
          <th class="reference">注文番号</th>
          <th class="large">SKU</th>
          <th class="content">商品名</th>
          <th class="half">カード種別</th>
          <th class="right">単価</th>          
          <th class="rate">個数</th> 
          <th class="right">受取送料</th> 
          <th class="right">受取消費税</th>
          <th class="right">代行手数料</th>
          <th class="right">店舗ｸｰﾎﾟﾝ</th>
          <th class="right">楽天手数料</th>
          <th class="right">楽天<br>ポイント</th>
          <th class="right">追加ｼｽﾃﾑ<br>利用料</th>
          <th class="right">カード<br>手数料等</th>                   
          <th class="right">送料</th>    
          <th class="account"></th>          
        </tr>
      </thead>
      <%= form_for(@rakuten, url: rakuten_path(@rakuten)) do |f|  %>
        <tbody class="footer">   
          <td class="date"><%= f.text_field :sale_date, :size => 7 %></td>          
          <td class="reference"><%= f.text_field :order_num, :size => 22%></td>
          <td class="large"><%= f.text_field :sku, :size => 11 %></td>
          <td class="content"><%= f.text_field :goods_name, :size => 36 %></td>            
          <td class="half"><%= f.select :kind_of_card, ['楽天カード', '一般カード'], { include_blank: ''}, { class: "select"}%></td>            
          <td class="right"><%= f.text_field :unit_price, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td> 
          <td class="rate"><%= f.text_field :number, :size => 1, :style=>"text-align:right"%></td>
          <td class="right"><%= f.text_field :shipping_cost, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :consumption_tax, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :cod_fee, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>         
          <td class="right"><%= f.text_field :shop_coupon, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :commission, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :vest_point, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :system_improvement, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
          <td class="right"><%= f.text_field :credit_commission, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>                     
          <td class="right"><%= f.text_field :shipping_payment, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td> 
          <td class="account" id="submit-<%= @rakuten.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_rakuten_path(@rakuten), class: 'btn btn-default btn-xs'%></td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
