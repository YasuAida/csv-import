<div class="panel panel-default" id='rakuten-default'>
	<div class="panel-heading">
	  楽天入金管理シート(修正画面)
	  <%= link_to "一覧画面へ", rakutens_path, class: 'btn btn-default btn-sm'%>
	</div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-condensed">
      <thead>          
        <tr>            
          <th class="date">売上日付</th>      
          <th class="reference">注文番号</th>
          <td class="large">SKU</th>
          <th class="content">商品名</th>
          <th class="right">売上総額</th>
          <th class="right">ポイント</th>
          <th class="right">クーポン</th>          
          <th class="right">カード<br>手数料</th>          
          <th class="right">入金額</th>
          <th class="right">未入金</th>          
          <th class="update"></th>          
        </tr>         
      </thead>
     <%= form_for(@rakuten, url: rakuten_path(@rakuten)) do |f|  %>
        <tbody class="footer">         
          <tr>      
            <td class="date"><%= f.text_field :sale_date, :size => 7 %></td>          
            <td class="reference"><%= f.text_field :order_num, :size => 22 %></td>
            <td class="large"><%= f.text_field :sku, :size => 11 %></td>
            <td class="content"><%= f.text_field :goods_name, :size => 36 %></td>
            <td class="right"><%= f.text_field :total_sales, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
            <td class="right"><%= f.text_field :use_point, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
            <td class="right"><%= f.text_field :use_coupon, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
            <td class="right"><%= f.text_field :credit_commission, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>                  
            <td class="right"><%= f.text_field :receipt_amount, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>
            <td class="right"><%= f.text_field :minyukin, :size => 4, :style=>"text-align:right", data: { autonumeric: {mDec: 0} } %></td>            
            <td class="update" id="submit-<%= @rakuten.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%></td>          
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>