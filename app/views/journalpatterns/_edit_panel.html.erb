<div class="panel panel-default">
	<div class="panel-heading">
	  仕訳パターン登録(修正画面)
	  <%= link_to "一覧画面へ", journalpatterns_path, class: 'btn btn-default btn-xs'%>
	  <%= link_to "新規登録画面へ", new_journalpattern_path, class: 'btn btn-default btn-xs'%>
	</div>
  <div class="panel-body" id='edit-body'>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="middle">税抜/税込</th>
          <th class="large">帳票</th>
          <th class="middle_large">パターン</th>
          <th class="large">借方勘定科目</th>
          <th class="large">借方補助科目</th>
        　<th class="middle">借方<br>税コード</th>
        　<th class="large">貸方勘定科目</th>
        　<th class="large">貸方補助科目</th>
        　<th class="middle">貸方<br>税コード</th>
          <th class="account"></th> 
        </tr>
      </thead>
      <%= form_for(@journalpattern) do |f|  %>
        <tbody class="footer">
          <tr>
            <td class="middle"><%= f.text_field :taxcode, :size=> "4"%></td>
            <td class="large"><%= f.text_field :ledger, :size=> "10"%></td>
            <td class="middle_large"><%= f.text_field :pattern, :size=> "14"%></td>
            <td class="large"><%= f.text_field :debit_account, :size=> "10"%></td>
            <td class="large"><%= f.text_field :debit_subaccount, :size=> "10"%></td>
            <td class="middle"><%= f.text_field :debit_taxcode, :size=> "4"%></td>            
            <td class="large"><%= f.text_field :credit_account, :size=> "10"%></td>
            <td class="large"><%= f.text_field :credit_subaccount, :size=> "10"%></td>
            <td class="middle"><%= f.text_field :credit_taxcode, :size=> "4"%></td>                   
            <td class="account" id="submit-<%= @journalpattern.id %>"><%= f.submit "更新", class: 'btn btn-default btn-xs'%><%= link_to "コピー", copy_journalpattern_path(@journalpattern), class: 'btn btn-default btn-xs'%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
